<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:background="@drawable/bg_main"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:id="@+id/view_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hello! Welcome to the Blood Donation App!"
        android:id="@id/intro"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please Enter your details as mentioned in the following screens to register yourself among the list of donors!"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:id="@id/instruction"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textIsSelectable="false"
        android:textSize="15sp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on 'Register' to start the process."
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:paddingTop="15dp"
        android:layout_weight="1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button_register"
        android:clickable="true"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:singleLine="true"
        android:textAllCaps="false"
        android:onClick="startReg"
        android:padding="10dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>
